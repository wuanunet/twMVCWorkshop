@model twMVCWorkshop.Models.Article

@{
    ViewBag.Title = "Delete";
}
<h3>文章管理</h3>
<fieldset>
    <legend>刪除文章</legend>

    <dl>
        <dt>@Html.Label("文章分類", new { @class = "control-label" })</dt>
        <dd>@Html.DisplayFor(model => model.Category.Name)</dd>

        <dt>@Html.LabelFor(model => model.Subject, new { @class = "control-label" })</dt>
        <dd>@Html.DisplayFor(model => model.Subject)</dd>

        <dt>@Html.LabelFor(model => model.Summary, new { @class = "control-label" })</dt>
        <dd>@Html.DisplayFor(model => model.Summary)</dd>

        <dt>@Html.LabelFor(model => model.ContentText, new { @class = "control-label" })</dt>
        <dd>@Html.DisplayFor(model => model.ContentText)</dd>

        <dt>@Html.LabelFor(model => model.IsPublish, new { @class = "control-label" })</dt>
        <dd>@(Model.IsPublish ? "是" : "否")</dd>

        <dt>@Html.LabelFor(model => model.PublishDate, new { @class = "control-label" })</dt>
        <dd>@Html.DisplayFor(model => model.PublishDate)</dd>

        <dt>@Html.LabelFor(model => model.ViewCount, new { @class = "control-label" })</dt>
        <dd>@Html.DisplayFor(model => model.ViewCount)</dd>

        <dt>@Html.LabelFor(model => model.CreateUser, new { @class = "control-label" })</dt>
        <dd>@Html.DisplayFor(model => model.CreateUser)</dd>

        <dt>@Html.LabelFor(model => model.CreateDate, new { @class = "control-label" })</dt>
        <dd>@Html.DisplayFor(model => model.CreateDate)</dd>

        <dt>@Html.LabelFor(model => model.UpdateUser, new { @class = "control-label" })</dt>
        <dd>@Html.DisplayFor(model => model.UpdateUser)</dd>

        <dt>@Html.LabelFor(model => model.UpdateDate, new { @class = "control-label" })</dt>
        <dd>@Html.DisplayFor(model => model.UpdateDate)</dd>
    </dl>

</fieldset>

@using (Html.BeginForm())
{
    <div id="ConfirmModal" class="modal small hide fade" tabindex="-1" role="dialog" aria-labelledby="ConfirmModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="ConfirmModalLabel">刪除確認</h3>
        </div>
        <div class="modal-body">
            <p class="error-text">
                是否確定要刪除此文章?
            </p>
        </div>
        <div class="modal-footer">
            @Html.AntiForgeryToken()
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <input type="submit" class="btn btn-danger" value="刪除" />
        </div>

    </div>
}

<div class="form-actions">
    <a href="#" class="confirm-delete btn btn-success" data-toggle="modal">刪除</a> |  
    @Html.ActionLink("回到列表", "Index", "Article")
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            $('.confirm-delete').click(function (e) {
                e.preventDefault();
                $('#ConfirmModal').modal('show');
            });
        });
    </script>
}